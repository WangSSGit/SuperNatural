# http://editorconfig.org
#表明是最顶层的配置文件，发现设为true时，才会停止查找.editorconfig文件。
root = true

[*]
#设置缩进风格，tab或者空格
indent_style = space

#缩进的宽度
indent_size = 2

#换行符，lf、cr和crlf
end_of_line = lf
charset = utf-8

#设为true表示会除去换行行首的任意空白字符。
trim_trailing_whitespace = true

#设为true表明使文件以一个空白行结尾
insert_final_newline = true

[*.md]
#设为true表示会除去换行行首的任意空白字符。
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
